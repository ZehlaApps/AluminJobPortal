@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center my-lg-5">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Role">I am an</label>
                <select class="form-select" asp-for="Input.Role" asp-validation-for="Input.Role">
                    <option value="Applicant" selected>Applicant</option>
                    <option value="Employer">Employer</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Organisation">Organisation (College for job applicants)</label>
                <input asp-for="Input.Organisation" class="form-control" />
                <span asp-validation-for="Input.Organisation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" autocomplete="username" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" autocomplete="new-password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-8 d-none d-md-block text-center">
        <img src="~/img/corporate_unlocked.svg"height="500" />
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}